            margin-right: 0.75rem;
            font-weight: bold;
            flex-shrink: 0;
        }

        .docs-section {
            margin-bottom: 2rem;
        }

        .docs-section h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .docs-section h3 {
            font-size: 1.1rem;
            margin-bottom: 1rem;
            color: #667eea;
        }

        .doc-links-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .doc-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            background: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 8px;
            text-decoration: none;
            color: #333;
            transition: all 0.2s ease;
        }

        .doc-link:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
            transform: translateX(4px);
        }

        .doc-link-icon {
            font-size: 1.5rem;
            margin-right: 0.75rem;
        }

        .doc-link-text {
            font-size: 0.95rem;
            font-weight: 500;
        }

        .api-section {
            margin-top: 2rem;
        }

        .doc-card {
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 12px;
            padding: 1.5rem;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .doc-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.2);
            border-color: #667eea;
        }

        .doc-card-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .doc-card h3 {
            font-size: 1.2rem;
            margin-bottom: 0.5rem;
            color: #667eea;
        }

        .doc-card p {
            font-size: 0.9rem;
            color: #666;
            flex-grow: 1;
        }

        .doc-card-arrow {
            margin-top: 1rem;
            color: #667eea;
            font-weight: 600;
            display: flex;
            align-items: center;
        }

        .doc-card-arrow:after {
            content: "‚Üí";
            margin-left: 0.5rem;
            transition: margin-left 0.3s ease;
        }

        .doc-card:hover .doc-card-arrow:after {
            margin-left: 1rem;
        }

        .footer {
            text-align: center;
            padding: 1.5rem 2rem;
            background: #f8f9fa;
            color: #666;
            font-size: 0.9rem;
        }

        .footer a {
            color: #667eea;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }

        @media (max-width: 600px) {
            .header h1 {
                font-size: 2rem;
            }

            .doc-links-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
